{
    "name": "PulseCNN_GauNLL",
    "n_gpu": 1,
    "arch": {
        "type": "PulseCNN",
        "args": {
            "GauNll_use": true,
            "mlp_latent_dim": 256,
            "mlp_num_layers": 3,
            "mlp_dropout": 0.1,
            "projection_init_channels": 64,
            "projection_dropout": 0.2,
            "UpLayer_ks": 3,
            "channels_list": [256, 128, 64],
            "output_lengths": [37, 75, 150]
        }
    },
    "data_loader_train": {
        "type": "CollisionDataLoader",
        "args": {
            "packaged_data_path": "E:/WPS Office/1628575652/WPS企业云盘/清华大学/我的企业文档/课题组相关/理想项目/仿真数据库相关/VCS波形数据集打包/acc_data_before1015_4138/packaged_data_train.npz",
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 0,
            "pulse_norm_mode": "absmax",
            "scaler_path": "data_loader/pulse_scaler.joblib",
            "training": true
        }
    },
    "data_loader_test": {
        "type": "CollisionDataLoader",
        "args": {
            "packaged_data_path": "E:/WPS Office/1628575652/WPS企业云盘/清华大学/我的企业文档/课题组相关/理想项目/仿真数据库相关/VCS波形数据集打包/acc_data_before1015_4138/packaged_data_test.npz",
            "batch_size": 32,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0,
            "pulse_norm_mode": "absmax",
            "scaler_path": "data_loader/pulse_scaler.joblib",
            "training": false
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.0003,
            "weight_decay": 0.001
        }
    },

    "loss": [
        {
            "type": "MultiLoss",
            "weight": 0.7,
            "channel_weights": [1.0, 0.5, 0.01], 
            "args": {
                "loss_weights": [1.0, 2.0, 5.0],
                "base_loss_type": "GaussianNLLLoss",
                "base_loss_args": {
                    "eps": 1e-06,
                    "reduction": "mean"
                }
            }
        },
        {
            "type": "CorridorLoss",
            "weight": 1.0,
            "channel_weights": [1.0, 0.5, 0.05],
            "args": {
                "inner_corridor_width": 0.05,
                "exponent": 2.0
            }
        },
        {
            "type": "SlopeLoss",
            "weight": 1.6,
            "channel_weights": [1.0, 0.4, 0],
            "args": {
                "reduction": "mean",
                "apply_smoothing": false,
                "smoothing_window_size": 5
            }
        },
        {
            "type": "PhaseLoss",
            "weight": 1.5,
            "channel_weights": [1.0, 0.5, 0.02],
            "args": {
                "n_fft": 64,
                "hop_length": 16,
                "win_length": 64
            }
        },
        {
            "type": "InitialLoss",
            "weight": 0.35, 
            "channel_weights": [1.0, 0.5, 0.5],
            "args": {
                "percentage": 0.04,
                "weight_target": 0.5,
                "loss_type": "mae"
            }
        },
        {
            "type": "TerminalLoss",
            "weight": 0.1,
            "channel_weights": [0.1, 0.5, 0.5],
            "args": {
                "percentage": 0.04,
                "weight_target": 2.0,
                "loss_type": "mae"
            }
        }
    ],

    "metrics": [
        "rmse_x",
        "rmse_y",
        "rmse_z",
        "iso_rating_x",
        "iso_rating_y",
        "iso_rating_z"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 80,
            "eta_min": 5e-7
        }
    },
    "trainer": {
        "epochs": 80,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max iso_rating_x",
        "early_stop": 100,
        "tensorboard": true
    }
}