{
    "name": "HybridPulseCNN",
    "n_gpu": 1,
    "arch": {
        "type": "HybridPulseCNN",
        "args": {
            "GauNll_use": true,
            "mlp_hidden_dim": 256, 
            "seed_proj_channels": 256,
            "seed_proj_pe_dim": 64,
            "gru_hidden_dim": 128,
            "gru_layers": 1,
            "channel_configs": [128, 64, 32],
            "decoder_blocks_per_stage": [1, 1, 2],
            "output_lengths": [37, 75, 150],
            "head_config": {"hidden_dim": 64, "num_layers": 2}
        }
    },
    "data_loader_train": {
        "type": "CollisionDataLoader",
        "args": {
            "packaged_data_path": "E:/WPS Office/1628575652/WPS企业云盘/清华大学/我的企业文档/课题组相关/理想项目/仿真数据库相关/VCS波形数据集打包/acc_data_before1111_6134/packaged_data_train.npz",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "pulse_norm_mode": "absmax",
            "scaler_path": "data_loader/pulse_scaler.joblib",
            "training": true,
            "physics_bounds": {
                "v_min": 23.5,
                "v_max": 65,
                "a_abs_max": 45,
                "o_abs_max": 1
            }
        }
    },
    "data_loader_test": {
        "type": "CollisionDataLoader",
        "args": {
            "packaged_data_path": "E:/WPS Office/1628575652/WPS企业云盘/清华大学/我的企业文档/课题组相关/理想项目/仿真数据库相关/VCS波形数据集打包/acc_data_before1111_6134/packaged_data_test.npz",
            "batch_size": 64,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0,
            "pulse_norm_mode": "absmax",
            "scaler_path": "data_loader/pulse_scaler.joblib",
            "training": false,
            "physics_bounds": {
                "v_min": 23.5,
                "v_max": 65,
                "a_abs_max": 45,
                "o_abs_max": 1
            }
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 1e-3,
            "weight_decay": 4e-3
        },
        "head_decay_ratio": 0.02
    },

    "loss": [
        {
            "type": "MultiLoss",
            "weight": 0.7,
            "channel_weights": [1.0, 0.5, 0.02], 
            "args": {
                "scale_loss_weights": [0, 1.0, 5.0],
                "base_loss_type": "GaussianNLLLoss",
                "base_loss_args": {
                    "eps": 1e-06,
                    "reduction": "mean"
                }
            }
        },
        {
            "type": "CorridorLoss",
            "weight": 2.0,
            "channel_weights": [1.0, 0.7, 0.3],
            "args": {
                "inner_corridor_width": 0.05,
                "exponent": 2.0
            }
        },
        {
            "type": "SlopeLoss",
            "weight": 2.0,
            "channel_weights": [1.0, 0.5, 0.02],
            "args": {
                "reduction": "mean",
                "apply_smoothing": false,
                "smoothing_window_size": 5
            }
        },
        {
            "type": "PhaseLoss",
            "weight": 2.0,
            "channel_weights": [1.0, 0.5, 0.05],
            "args": {
                "n_fft": 64,
                "hop_length": 16,
                "win_length": 64
            }
        },
        {
            "type": "InitialLoss",
            "weight": 0.2, 
            "channel_weights": [1.0, 0.5, 0.5],
            "args": {
                "percentage": 0.04,
                "weight_target": 0.5,
                "loss_type": "mae"
            }
        },
        {
            "type": "TerminalLoss",
            "weight": 0.02,
            "channel_weights": [0.1, 0.5, 0.5],
            "args": {
                "percentage": 0.04,
                "weight_target": 2.0,
                "loss_type": "mae"
            }
        }
    ],

    "metrics": [
        "rmse_x",
        "rmse_y",
        "rmse_z",
        "iso_rating_x",
        "iso_rating_y",
        "iso_rating_z"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 120,
            "eta_min": 0
        }
    },
    "trainer": {
        "epochs": 120,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "max val_iso_rating_x",
        "early_stop": 30,
        "tensorboard": true
    }
}