{
    "name": "CrashPulse_MLP_GauNLL",
    "n_gpu": 1,
    "arch": {
        "type": "PulseMLP",
        "args": {
            "hidden_dims": 256,
            "num_layers": 5,
            "dropout": 0.2
        }
    },
    "data_loader_train": {
        "type": "CollisionDataLoader",
        "args": {
            "params_npz_path": "data/params.npz",
            "processed_pulses_path": "data/processed_pulses_train.npz",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1,
            "pulse_norm_mode": "absmax",
            "scalar_save_path": "data/pulse_scaler.joblib",
            "training": true
        }
    },
    "data_loader_test": {
        "type": "CollisionDataLoader",
        "args": {
            "params_npz_path": "data/params.npz",
            "processed_pulses_path": "data/processed_pulses_test.npz",
            "batch_size": 64,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 1,
            "normalization_mode": "absmax",
            "scalar_save_path": "data/pulse_scaler.joblib",
            "training": false
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.001,
            "weight_decay": 1e-4
        }
    },
    "loss": {
        "type": "GaussianNLLLoss",
        "args": {
            "eps": 1e-6,
            "reduction": "mean"
        }
    },
    "metrics": [
        "root_mean_squared_error",
        "iso_rating_x",
        "iso_rating_y",
        "iso_rating_z"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 100,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 30,
        "tensorboard": true
    }
}