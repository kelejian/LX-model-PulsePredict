{
    "name": "CrashPulse_MLP_GauNLL",
    "n_gpu": 1,
    "arch": {
        "type": "PulseMLP",
        "args": {
            "GauNll_use": true,
            "hidden_dims": 256,
            "num_layers": 3,
            "dropout": 0.2
        }
    },
    "data_loader_train": {
        "type": "CollisionDataLoader",
        "args": {
            "packaged_data_path": "E:/WPS Office/1628575652/WPS企业云盘/清华大学/我的企业文档/课题组相关/理想项目/仿真数据库相关/acc_data_before1015_4138/packaged_data_train.npz",
            "batch_size": 512,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 0,
            "pulse_norm_mode": "absmax",
            "scaler_path": "data_loader/pulse_scaler.joblib",
            "training": true
        }
    },
    "data_loader_test": {
        "type": "CollisionDataLoader",
        "args": {
            "packaged_data_path": "E:/WPS Office/1628575652/WPS企业云盘/清华大学/我的企业文档/课题组相关/理想项目/仿真数据库相关/acc_data_before1015_4138/packaged_data_test.npz",
            "batch_size": 32,
            "shuffle": false,
            "validation_split": 0,
            "num_workers": 0,
            "pulse_norm_mode": "absmax",
            "scaler_path": "data_loader/pulse_scaler.joblib",
            "training": false
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.001
        }
    },
    "loss": {
        "type": "GaussianNLLLoss",
        "args": {
            "eps": 1e-6,
            "reduction": "mean"
        }
    },
    "metrics": [
        "rmse_x",
        "rmse_y",
        "rmse_z",
        "iso_rating_x",
        "iso_rating_y",
        "iso_rating_z"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 50,
            "eta_min": 1e-6
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "max iso_rating_x",
        "early_stop": 50,
        "tensorboard": true
    }
}